{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    // "outDir": "lib",
    // "declarationDir": "lib",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
  },
  "include": ["src/", "global.d.ts"],
}